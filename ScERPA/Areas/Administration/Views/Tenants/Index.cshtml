@inject ScERPA.Services.Interfaces.ICommonServices commonServices
@model TenantsListViewModel
<partial name="_Esito" />
<br />
<div>
    <h1>@ViewData["Title"]</h1>   
</div>
<div class="table-responsive rounded shadow">
    <table id="TabellaTenants" name="TabellaTenants" class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome tenant</th>
                <th ></th>
                <th ></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var elemento in Model.Elenco)
            {
                <tr>
                    <td>@elemento.Id</td>
                    <td><a asp-area="Administration" asp-controller="Tenants" asp-action="Details" asp-route-id="@elemento.Id" aria-label="Dettaglio tenant @elemento.Nome"><span>@elemento.Nome</span></a></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@elemento.Id" class="btn btn-outline-primary btn-me" role="button" aria-label="Modifica tenant @(elemento.Nome)">
                            <span>Modifica</span>
                        </a>
                    </td>
                    <td>
                        <a asp-area="Administration" asp-controller="Tenants" asp-action="Delete" asp-route-id="@elemento.Id" class="btn btn-outline-danger btn-me" role="button" aria-label="Elimina tenant @(elemento.Nome)">
                            <span>Elimina</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<p>
    <a asp-area="Administration" asp-controller="Tenants" asp-action="Create" class="btn btn-primary btn-me" role="button">
        <span>Nuovo Tenant</span>
    </a>
</p>

