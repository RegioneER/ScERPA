@inject ScERPA.Services.Interfaces.ICommonServices commonServices
@model ConfigurationsListViewModel
<partial name="_Esito" />
<br />
<div>
    <h1>@ViewData["Title"]</h1>   
</div>
<div class="table-responsive rounded shadow">
    <table id="TabellaConfigurazioni" name="TabellaConfigurazioni" class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col" >Id</th>
            <th scope="col" class="w-25">Ambiente</th>
            <th scope="col" class="w-50">Configurazione</th>
            <th scope="col" >Modifica</th>
            <th ></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var elemento in Model.Elenco)
        {
            <tr>
                <td>@elemento.Id</td>
                <td>@elemento.Ambiente</td>
                    <td><a asp-area="Administration" asp-controller="Configurations" asp-action="Details" asp-route-id="@elemento.Id" aria-label="Dettaglio configurazione @elemento.Nome"><span>@elemento.Nome</span></a></td>
                <td>
                    <a asp-area="Administration" asp-controller="Configurations" asp-action="Edit" asp-route-id="@elemento.Id" class="btn btn-outline-primary" role="button" aria-label="Modifica configurazione @(elemento.Nome)">
                        <span>Modifica</span>
                    </a>
                </td>
                <td>
                    <a asp-area="Administration" asp-controller="Configurations" asp-action="Delete" asp-route-id="@elemento.Id" class="btn btn-outline-danger" role="button" aria-label="Elimina configurazione @(elemento.Nome)">
                        <span>Elimina</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<br />
<p>
    <a asp-area="Administration" asp-controller="Configurations" asp-action="Create" class="btn btn-primary btn-me" role="button">
        <span>Nuova configurazione</span>
    </a>
</p>


