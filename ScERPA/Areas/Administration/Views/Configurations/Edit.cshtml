@inject ScERPA.Services.Interfaces.ICommonServices commonServices
@using ScERPA.Models.Enums
@model ConfigurationEditCreateViewModel


<div class="clearfix mt-3">
    <h1 class="float-start">@ViewData["Title"]</h1>
    <a class="btn float-end" role="button" asp-action="Index">Torna alla lista</a>
</div>
<br />
<hr />
<br>
<section name="dati_configurazione" class="lightgrey-bg-a3 rounded shadow py-3" aria-label="dati configurazione">
    <em class="px-3">I campi con * sono obbligatori</em>
    <form asp-action="Edit" class="px-3">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
        <div class="form-group mt-4">
            <label asp-for="inputModel.Id" class="active d-none">Id*</label>
            <input asp-for="inputModel.Id" class="form-control d-none" value="@Model.inputModel.Id" aria-required="true" autocomplete="off" />
            <span asp-validation-for="inputModel.Id" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <label asp-for="inputModel.Nome" class="active">Nome*</label>
            <input asp-for="inputModel.Nome" class="form-control" value="@Model.inputModel.Nome" aria-required="true" autocomplete="off" />
            <span asp-validation-for="inputModel.Nome" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <label asp-for="inputModel.ApiManagerClientId" class="active">@Html.DisplayNameFor(model => model.inputModel.ApiManagerClientId)*</label>
            <input type="password" data-bs-input asp-for="inputModel.ApiManagerClientId " class="form-control input-password" value="@Model.inputModel.ApiManagerClientId" aria-required="true" autocomplete="off" />
            <span class="password-icon" aria-hidden="true">
                <svg class="password-icon-visible icon icon-sm">
                    <use xlink:href='@(commonServices.SpritesPath+"/sprites.svg#it-password-visible")' href='@(commonServices.SpritesPath+"/sprites.svg#it-password-visible")'></use>
                </svg>
                <svg class="password-icon-invisible icon icon-sm d-none">
                    <use xlink:href='@(commonServices.SpritesPath+"/sprites.svg#it-password-invisible")' href='@(commonServices.SpritesPath+"/sprites.svg#it-password-invisible")'></use>
                </svg>
            </span>
            <span asp-validation-for="inputModel.ApiManagerClientId" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <label asp-for="inputModel.ApiManagerClientSecret" class="active">@Html.DisplayNameFor(model => model.inputModel.ApiManagerClientSecret)*</label>
            <input type="password" data-bs-input asp-for="inputModel.ApiManagerClientSecret " class="form-control input-password" value="@Model.inputModel.ApiManagerClientSecret" aria-required="true" autocomplete="off" />
            <span class="password-icon" aria-hidden="true">
                <svg class="password-icon-visible icon icon-sm">
                    <use xlink:href='@(commonServices.SpritesPath+"/sprites.svg#it-password-visible")' href='@(commonServices.SpritesPath+"/sprites.svg#it-password-visible")'></use>
                </svg>
                <svg class="password-icon-invisible icon icon-sm d-none">
                    <use xlink:href='@(commonServices.SpritesPath+"/sprites.svg#it-password-invisible")' href='@(commonServices.SpritesPath+"/sprites.svg#it-password-invisible")'></use>
                </svg>
            </span>
            <span asp-validation-for="inputModel.ApiManagerClientSecret" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <label asp-for="inputModel.ApiManagerOauthEndpoint" class="active">@Html.DisplayNameFor(model => model.inputModel.ApiManagerOauthEndpoint)*</label>
            <input asp-for="inputModel.ApiManagerOauthEndpoint" class="form-control" value="@Model.inputModel.ApiManagerOauthEndpoint" aria-required="true" />
            <span asp-validation-for="inputModel.ApiManagerOauthEndpoint" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Salva</button>
        </div>
     </form>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
