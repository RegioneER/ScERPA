@inject ScERPA.Services.Interfaces.ICommonServices commonServices
@model EServicesListViewModel
<partial name="_Esito" />
<br />
<div>
    <h1>@ViewData["Title"]</h1>
</div>
<div class="table-responsive rounded shadow">
    <table id="TabellaEServices" name="TabellaEServices" class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Area</th>
                <th scope="col">Nome servizio</th>
                <th scope="col">Attivo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var elemento in Model.Elenco)
            {
                <tr>
                    <td>@elemento.Id</td>
                    <td><span>@elemento.Area</span></td>
                    <td><a asp-area="Administration" asp-controller="EServices" asp-action="Details" asp-route-id="@elemento.Id" aria-label="Dettaglio servizio @elemento.Nome"><span>@elemento.Nome</span></a></td>
                    <td>@elemento.Attivo</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />

