@if (TempData["EsitoPositivo"] is not null)
{
    <div id="Esito" class="alert alert-success mt-4" role="alert" data-bs-timeout="10000" >
        <h4 class="alert-heading">Operazione eseguita con successo!</h4>
        <p>@TempData["EsitoPositivo"]</p>
    </div>
}
@if (TempData["EsitoNegativo"] is not null)
{
    <div id="Esito" class="alert alert-danger mt-4" role="alert" data-bs-timeout="10000">
        <h4 class="alert-heading">Si è verificato un problema!</h4>
        <p>@TempData["EsitoNegativo"]</p>
    </div>
}
@if (TempData["EsitoInformazione"] is not null)
{
    <div id="Esito" class="alert alert-info mt-4" role="alert" data-bs-timeout="10000">
        <h4 class="alert-heading">Informazioni</h4>
        <p>@TempData["EsitoInformazione"]</p>
    </div>
}
@if (TempData["EsitoAttenzione"] is not null)
{
    <div id="Esito" class="alert alert-warning mt-4" role="alert" data-bs-timeout="10000">
        <h4 class="alert-heading">Attenzione!</h4>
        <p>@TempData["EsitoAttenzione"]</p>
    </div>
}